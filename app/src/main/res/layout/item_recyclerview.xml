<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLinete:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/item_plazo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plazo:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/item_tasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tasa de interes:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/item_monto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="monto:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/item_interes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="interes:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/item_iva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iva:"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/item_pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pago"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>